@model Liblio.Models.LibraryItem
@{
    ViewBag.Title = "Check Out";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Check Out</h2>

@using (Html.BeginForm("Save", "CheckOut"))
{
@Html.ValidationSummary(false, "Please fix the following errors.")

<div class="form-group">
    @Html.LabelFor(m => m.Borrower)
    @Html.TextBoxFor(m => m.Borrower, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Borrower)
</div>

@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.Title)
@Html.HiddenFor(m => m.Type)
@Html.AntiForgeryToken()
<button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}